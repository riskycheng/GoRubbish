<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LearnActivity">


    <TextView
            android:id="@+id/learn_rubbish_name_tobe_categorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="150dp"
            android:text="@string/learn_rubbish_name"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>


    <ImageView
            android:visibility="invisible"
            android:id="@+id/img_result"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="300dp"
            android:src="@drawable/correct"
    android:layout_gravity="center_horizontal"/>

    <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/learn_category_of_recycle"
                android:layout_margin="10dp"
                android:src="@drawable/icon_recycle"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"/>

        <ImageView
                android:layout_margin="10dp"
                android:id="@+id/learn_category_of_wet"
                android:src="@drawable/icon_wet"
                android:layout_width="0dp" android:layout_height="100dp"
                android:layout_weight="1"/>

        <ImageView
                android:layout_margin="10dp"
                android:id="@+id/learn_category_of_dry"
                android:src="@drawable/icon_dry"
                android:layout_width="0dp" android:layout_height="100dp"
                android:layout_weight="1"/>

        <ImageView
                android:layout_margin="10dp"
                android:id="@+id/learn_category_of_harm"
                android:src="@drawable/icon_harm"
                android:layout_width="0dp" android:layout_height="100dp"
                android:layout_weight="1"/>
    </LinearLayout>

    <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rubbish_copyright"
            android:layout_gravity="center|bottom"/>

</FrameLayout>